<!-- 1. Samples needed \approx (# of free parameters)^2, reasonable to have 1000 samples/process -->
<!--   this input is intended for Taub with 4 nodes (64 processes), and can handle about 250 dets+123jastrows -->
<!-- 2. To decorrelate samples, set substeps*timestep >= 5a.u. -->
<!-- 3. # of block will be determined by samples and # of processes (1500 for 64 processes on Taub) -->
<!-- 4. steps will default to 1, correlation is removed by substeps -->
<loop max="5">
  <qmc method="linear" move="pbyp" checkpoint="-1" gpu="no">
    <parameter name="samples">      96000   </parameter>
    <parameter name="substeps">     50      </parameter>
    <parameter name="timestep">     0.1     </parameter>

    <cost name="energy">                0.5     </cost>
    <cost name="unreweightedvariance">  0.0     </cost>
    <cost name="reweightedvariance">    0.5     </cost>
  </qmc>
</loop>
